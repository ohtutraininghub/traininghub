// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
}

model Course {
  id          String    @id @unique @default(cuid())
  name        String
  description String
  startDate   DateTime
  endDate     DateTime?
  maxStudents Int
  tags        Tag[]
}

model Tag {
  id      String   @id @unique @default(cuid())
  name    String   @unique
  courses Course[]
}
